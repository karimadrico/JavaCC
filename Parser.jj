options {
  STATIC = false;
}

PARSER_BEGIN(Parser)
public class Parser {
  public static void main(String[] args) throws Exception {
    Parser parser = new Parser(System.in);
    parser.Program();
    System.out.println("Programa analizado correctamente.");
  }
}
PARSER_END(Parser)

/* ====== ESPACIOS ====== */
SKIP :
{
  " " | "\t" | "\r" | "\n"
}

/* ====== COMENTARIO COBOL *> ====== */
SKIP :
{
  < COMMENT : "*>"
    (~["\r","\n"])* >
}

/* ====== TOKENS ====== */
TOKEN : { < DOT: "." > }
TOKEN : { < PROGRAM: "PROGRAM" > }
TOKEN : { < BEGIN: "BEGIN" > }
TOKEN : { < END: "END" > }

TOKEN :
{
  < ID:
    (["A"-"Z"])
    (["A"-"Z","0"-"9","-"])* 
    (["A"-"Z","0"-"9"])
  | (["A"-"Z"])
  >
}

/* ====== GRAM√ÅTICA ====== */
void Program() : { Token progName; } {
  <PROGRAM> progName=<ID> <DOT>
  <BEGIN>
  <END> <DOT>
}
